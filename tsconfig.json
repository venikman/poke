{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["api/*"],
      "@shared/*": ["shared/*"]
    },
    "types": ["@rstest/core/globals"]
  },
  "include": ["src", "api", "modern.config.ts", "rstest.config.ts"]
}
